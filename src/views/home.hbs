<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Pantalla de Bienvenida</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #0c2238;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      position: relative;
    }

    .logo img {
      width: 120px;
      margin-bottom: 10px;
    }

    .titulo {
      text-align: center;
      margin-bottom: 30px;
    }

    .titulo h2 {
      margin: 5px;
      font-weight: normal;
    }

    .linea {
      width: 80%;
      height: 1px;
      background-color: white;
      opacity: 0.3;
      margin-bottom: 40px;
    }

    .botones {
      display: flex;
      gap: 60px;
      justify-content: center;
      align-items: center;
    }

    .btn {
      text-align: center;
      padding: 20px;
      border-radius: 15px;
      cursor: pointer;
      font-weight: bold;
      font-size: 18px;
      width: 140px;
      color: white;
    }

    .btn img {
      width: 50px;
      margin-bottom: 10px;
    }

    .btn-iniciar {
      background-color: #4da8ff;
    }

    .btn-admin {
      background-color: #ffc300;
      color: #0c2238;
    }

    .salir {
      position: absolute;
      bottom: 20px;
      right: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 16px;
    }

    .salir-icon {
      background-color: white;
      color: #0c2238;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 22px;
    }

    .modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: none; /* Oculto por defecto */
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-box {
  background-color: white;
  padding: 30px;
  border-radius: 15px;
  text-align: center;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.modal-buttons {
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
}

.btn-aceptar {
  background-color: #ffc107;
  border: none;
  padding: 10px 20px;
  font-weight: bold;
  cursor: pointer;
  color: black;
  border-radius: 5px;
}

.btn-cancelar {
  background-color: #dc3545;
  border: none;
  padding: 10px 20px;
  font-weight: bold;
  cursor: pointer;
  color: white;
  border-radius: 5px;
}

.btn-aceptar:hover {
  background-color: #e0a700;
}

.btn-cancelar:hover {
  background-color: #c82333;
}

  </style>
</head>
<body>

  <div class="logo">
    <img src="/images/Logo.png" alt="Logo" style="width: 250px; height: auto;" />
  </div>

  <div class="titulo">
    <h2>ABARROTES VINOS Y LICORES ERICK</h2>
    <h3 style="letter-spacing: 3px; font-weight: 300;">PUNTO DE VENTA</h3>
  </div>

  <div class="linea"></div>

  <div class="botones">
    <a href="/ticket_main"  style="color: inherit; text-decoration: none;">
    <div class="btn btn-iniciar">
      <img src="/images/icons8-carrito-de-compras-30.png" alt="Iniciar">
        <hr style="border: none; height: 0; margin-bottom: 1px; background-color: transparent;">
      INICIAR
    </div>
    </a>

    <a href="/admin" style="color: inherit; text-decoration: none;">
    <div class="btn btn-admin">
      <img src="/images/icons8-caja-50.png" alt="Administrar">
    <hr style="border: 1px solid transparent;">

      ADMINISTRAR
    </div>
    </a>
  </div>

  <div class="salir">
    SALIR
    <div class="salir-icon">✕</div>
  </div>
<!-- Modal de confirmación -->
<div id="salir-modal" class="modal-overlay">
  <div class="modal-box">
      <p style="color: black;"><strong>¿SEGURO QUE DESEAS SALIR?</strong></p>
    <div class="modal-buttons">
      <button class="btn-aceptar" onclick="confirmarSalida()">ACEPTAR</button>
      <button class="btn-cancelar" onclick="cerrarModal()">CANCELAR</button>
    </div>
  </div>
</div>
<script>
  // Mostrar el modal al hacer clic en la sección SALIR
  document.querySelector('.salir').addEventListener('click', function (event) {
    event.preventDefault(); // Evita cualquier acción por defecto
    document.getElementById('salir-modal').style.display = 'flex';
  });

  // Función para cerrar el modal
  function cerrarModal() {
    document.getElementById('salir-modal').style.display = 'none';
  }

  // Función para confirmar salida (redirige)
  function confirmarSalida() {
    window.location.href = 'about:blank';
  }
</script>
</body>
</html>
