<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Administrar</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      display: flex;
      height: 100vh;
    }

    .sidebar {
      background-color: #a6c8ff;
      width: 250px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .logo {
      padding: 10px;
      text-align: center;
    }

    .menu {
      display: flex;
      flex-direction: column;
    }

    .menu button {
      padding: 15px;
      font-size: 18px;
      border: none;
      cursor: pointer;
      text-align: left;
    }

    .menu .dark {
      background-color: #004d7a;
      color: white;
      width: 100%;
    }

    .menu .light {
      background-color: #cce0ff;
      color: black;
      width: 100%;
    }

    .exit {
      background-color: #ffbb00;
      padding: 15px;
      font-weight: bold;
      text-align: center;
      cursor: pointer;
      border: none;
      font-size: 18px;
    }

    .main {
      flex-grow: 1;
      background-color: white;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .search-bar {
      display: flex;
      align-items: center;
      padding: 10px;
    }

    .search-bar input {
      margin-left: 10px;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 20px;
      border: 1px solid #ccc;
    }

    .content {
      padding: 20px;
      overflow-y: auto;
    }

    .total {
      position: absolute;
      bottom: 0;
      right: 0;
      background-color: #e6f0ff;
      padding: 20px;
      font-size: 20px;
    }

    .total span {
      font-weight: bold;
    }

    .proovedor {
      border-bottom: 1px solid #ccc;
      padding: 10px;
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <div class="logo">
      <img src="logo.png" alt="Logo" width="50" />
    </div>
    <div class="menu">
      <a href="/">
        <button class="dark">INICIO</button>
      </a>
      <a href="/product">
        <button class="light">PRODUCTOS</button>
      </a>
      <a href="/prov_new">
        <button class="dark">Nuevo Proveedor</button>
      </a>

    </div>
    <button class="exit">SALIR</button>
  </div>

  <div class="main">

    <div class="search-bar">
      üîç
      <input type="text" id="buscador" placeholder="Buscar proveedor..." />
    </div>


    <div id="resultado-busqueda" class="content">
      {{#each proveedores}}
      <div class="proovedor">
        <h2>{{nombre}}</h2>
        <p>Tel√©fono: {{telefono}}</p>
        <p>Correo: {{contacto}}</p>
        <p>ID de Proveedor: {{proveedor_id}}</p>
        <a href="/prov_edit?id={{proveedor_id}}">
          <button class="edit">Editar</button>
        </a>
        <!--<a href="/eliminar?id={{proveedor_id}}" method="POST" onclick="return confirm('¬øSeguro que deseas eliminar este proveedor?')">
          <button class="delete">Eliminar</button>
          </a>-->
        <form action="/eliminar" method="POST" onsubmit="return confirm('¬øSeguro que deseas eliminar este proveedor?')">
          <input type="hidden" name="id" value="{{proveedor_id}}">
          <button type="submit">Eliminar</button>
        </form>
      </div>
      {{/each}}
    </div>


    <script>
      const input = document.getElementById('buscador');
      const resultadoDiv = document.getElementById('resultado-busqueda');

      input.addEventListener('input', async () => {
        const texto = input.value.trim();

        if (texto.length === 0) {
          location.reload();
          return;
        }

        try {
          const res = await fetch(`/buscar?texto=${encodeURIComponent(texto)}`);
          const datos = await res.json();

          if (datos.length === 0) {
            resultadoDiv.innerHTML = '<p>No se encontraron resultados.</p>';
          } else {
            resultadoDiv.innerHTML = datos.map(prov => `
            <div class="proovedor">
              <h2>${prov.nombre}</h2>
              <p>Tel√©fono: ${prov.telefono}</p>
              <p>Correo: ${prov.contacto}</p>
              <p>ID de Proveedor: ${prov.proveedor_id}</p>
              <a href="/prov_edit?id=${prov.proveedor_id}">
              <button class="edit">Editar</button>
              </a>
              <!--<a href="/eliminar?id=${prov.proveedor_id}">
              <button class="delete">Eliminar</button>
              </a>-->
              <form action="/eliminar" method="POST" onsubmit="return confirm('¬øSeguro que deseas eliminar este proveedor?')">
          <input type="hidden" name="id" value="${prov.proveedor_id}">
          <button type="submit">Eliminar</button>
        </form>

            </div>
          `).join('');
          }
        } catch (error) {
          resultadoDiv.innerHTML = '<p>Error al buscar proveedores.</p>';
        }
      });
    </script>
</body>

</html>